{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "My Component Schematic Schema",
  "description": "Schema for generating a new component.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The name of the component.",
      "x-prompt": "What is the name of your component?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["id"]
}
